        // preg_match ã¯æ­£è¦è¡¨ç¾ã§ãƒã‚§ãƒƒã‚¯ã—ã¾ã™
        if (!empty($data['new_group_code']) && !preg_match('/^[0-9]+$/', $data['new_group_code'])) {
